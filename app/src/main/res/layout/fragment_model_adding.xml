<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vsevolod.swipe.addphoto.ModelAddingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/model_adding_image_view"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <AutoCompleteTextView
            android:id="@+id/model_adding_edit_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/model_adding_image_view"
            android:layout_marginTop="10dp"
            android:background="#b4b2b2"
            android:hint="Введите код"
            android:maxHeight="150dp"
            android:minHeight="50dp" />

    </RelativeLayout>
</FrameLayout>
