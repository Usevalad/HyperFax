<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.vsevolod.swipe.addphoto.activity.AddingActivity">

    <ImageView
        android:id="@+id/model_adding_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <AutoCompleteTextView
        android:id="@+id/model_adding_auto_complete_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/model_adding_image_view"
        android:windowSoftInputMode="stateVisible|adjustPan"
        android:inputType="number"
        android:maxLength="4"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/model_adding_auto_complete_text_view"
        android:layout_alignParentEnd="true"
        android:text="send" />
</RelativeLayout>


